# Пример файла .env
# Скопируйте этот файл в .env и заполните реальными значениями

# JWT секретный ключ (ОБЯЗАТЕЛЬНО измените на случайную строку минимум 32 символа!)
# Генерируйте безопасный ключ: openssl rand -base64 32
JWT_SECRET=your-super-secret-random-string-change-this-in-production-min-32-chars

# Разрешенные домены для CORS (через запятую, без пробелов)
ALLOWED_ORIGINS=https://my-chat-app.vercel.app,http://localhost:3000,http://localhost:8080

# URL базы данных PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Порт сервера (опционально, по умолчанию 3000)
PORT=3000
