# Пример файла .env
# Скопируйте этот файл в .env и заполните реальными значениями

# JWT секретный ключ (ОБЯЗАТЕЛЬНО измените на случайную строку минимум 32 символа!)
# Генерируйте безопасный ключ: openssl rand -base64 32
JWT_SECRET=your-super-secret-random-string-change-this-in-production-min-32-chars

# Разрешенные домены для CORS (через запятую, без пробелов)
# В production (NODE_ENV=production) — ОБЯЗАТЕЛЬНО, иначе сервер не запустится
ALLOWED_ORIGINS=https://my-chat-app.vercel.app,http://localhost:3000,http://localhost:8080

# URL базы данных PostgreSQL
# Используйте sslmode=verify-full чтобы убрать предупреждение (node:XX) и сохранить строгую проверку SSL
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=verify-full

# Порт сервера (опционально, по умолчанию 3000)
PORT=3000

# --- Приватный доступ (отчёты и учёт занятий) ---
# Только по списку: без имени в env в разделы не пускает. Код не используется.
PRIVATE_ACCESS_USERNAMES=teacher@example.com,admin
PRIVATE_ACCESS_USER_IDS=
# PRIVATE_ACCESS_CODE — не используется для доступа к отчётам/учёту (оставлен только для совместимости API)
PRIVATE_ACCESS_CODE=change-me

# --- Суперпользователь (админ/бухгалтерия) ---
# Укажите либо логины, либо id (можно оба). Логины сравниваются case-insensitive.
SUPERUSER_USERNAMES=admin,owner
SUPERUSER_USER_IDS=

# --- Яндекс Object Storage (загрузка файлов/картинок) ---
YANDEX_ACCESS_KEY_ID=
YANDEX_SECRET_ACCESS_KEY=
YANDEX_BUCKET_NAME=
# Опционально: публичный base URL для бакета (если отличается)
YANDEX_STORAGE_URL=
# Авто-настройка CORS для бакета при старте (по умолчанию true)
AUTO_SETUP_CORS=true

# --- Безопасность/фичи ---
# Разрешить загрузку Excel-выписок (xlsx/xls). Рекомендуется false (CSV безопаснее).
ALLOW_EXCEL_UPLOADS=false
